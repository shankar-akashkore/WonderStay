<% layout("/layouts/boilerplate") %>
<title>My Booking | WonderStay</title> 
<link rel="stylesheet" href="/css/mybooking.css">

<div class="bookings-container">
    <h2>My Bookings</h2>
    <br>

    <% if (bookings && bookings.length > 0) { %>
        <% for (let booking of bookings) { %>
            <div class="booking-card">
                <div class="booking-header">
                    <div class="booking-property">
                        <img src="<%= booking.listing.image.url || booking.listing.image %>" 
                             alt="<%= booking.listing.title %>" 
                             class="property-image">
                        <div class="property-details">
                            <h4><a href="/listings/<%= booking.listing._id %>"><%= booking.listing.title %></a></h4> 
                            <div class="index-loc">
                                <div class="index-loc-icon">
                                    <i class="ph ph-map-pin-line"></i>
                                </div>
                                <p><%= booking.listing.location %></p>
                            </div>
                            
                            <p><strong>Guests:</strong> <%= booking.guests %></p>
                            <p><strong>Total Price:</strong> â‚¹<%= booking.totalPrice.toLocaleString() %></p>
                        </div>
                    </div>
                    <div>
                        <span class="booking-status status-<%= booking.status %>">
                            <%= booking.status.charAt(0).toUpperCase() + booking.status.slice(1) %>
                        </span>
                    </div>
                </div>

                <div class="booking-dates">
                    <div class="date-info">
                        <strong>CHECK-IN</strong>
                        <span><%= new Date(booking.checkIn).toLocaleDateString('en-US', { 
                            weekday: 'short', 
                            year: 'numeric', 
                            month: 'short', 
                            day: 'numeric' 
                        }) %></span>
                    </div>
                    <div class="date-info">
                        <strong>CHECKOUT</strong>
                        <span><%= new Date(booking.checkOut).toLocaleDateString('en-US', { 
                            weekday: 'short', 
                            year: 'numeric', 
                            month: 'short', 
                            day: 'numeric' 
                        }) %></span>
                    </div>
                    <div class="date-info">
                        <strong>DURATION</strong>
                        <span><%= Math.ceil((new Date(booking.checkOut) - new Date(booking.checkIn)) / (1000 * 60 * 60 * 24)) %> nights</span>
                    </div>
                </div>

                <% if (booking.status === 'confirmed') { %>
                    <div style="margin-top: 16px;">
                        <form method="POST" action="/bookings/<%= booking._id %>/cancel" style="display: inline;">
                            <button type="submit" class="cancel-btn" 
                                    onclick="return confirm('Are you sure you want to cancel this booking?')">
                                Cancel Booking
                            </button>
                        </form>
                    </div>
                <% } %>
            </div>
        <% } %>
    <% } else { %>
        <div class="no-bookings">
            <i class="ph ph-calendar-x"></i>
            <h3>No bookings yet</h3>
            <p>When you book a trip, you'll see your reservations here.</p>
            <br>
            <a href="/listings" class="btn btn-primary">Start exploring</a>
        </div>
    <% } %>
</div>