<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-3 mt-2">
            <h3>All listing details</h3>
        </div>

    <div class="card col-6 offset-3 mt-2 show card">
        <img src="<%= listing.image.url || listing.image%>" class="card-img-top show-img" alt="listingimage">
        <div class="card-body">
            <p class="card-text"> 
                <b><%= listing.title %></b> <br>
                <%= listing.description %> <br>
                &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> <br>
                <%= listing.location %> <br>
                <%= listing.country %> <br>
            </p>
        </div>
    </div>
    <br>
    <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" 
            class="btn col-1 offset-3 btn-show">Edit</a>
        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
        <button class="btn btn-dark offset-4">Delete</button>
    </form>
    </div>
</div>
</body>
